{
  "private": true,
  "name": "@langpavel/homepage",
  "repository": "",
  "engines": {
    "node": ">= 14.0"
  },
  "workspaces": [
    "apps/*"
  ],
  "license": "UNLICENSED",
  "devDependencies": {
    "husky": "^5.1.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,html}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "lerna": "lerna",
    "ls": "lerna ls --reject-cycles --all --long --toposort",
    "build": "lerna run --stream build",
    "lint": "eslint apps packages --cache --ext js,jsx,ts,tsx",
    "format": "prettier --write \"apps/*/{src,public}/**/*.{js,ts,tsx,json,md,html}\"",
    "prepare": "husky install && lerna bootstrap"
  }
}
